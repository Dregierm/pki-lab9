      </div>
    </div>
  </nav>

  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th scope="col">User name</th>
        <th scope="col">Role</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.role %></td>
      </tr>
    </tbody>
  </table>

